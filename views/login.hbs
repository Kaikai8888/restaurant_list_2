<div class="container login-register-card" id="login-page">
  <div class="row">
    <div class="card card-body m-auto mt-5">
      <h2 class="text-center">登入</h2>
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="輸入Email">
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="輸入密碼">
        </div>
        <button class="btn btn-info btn-block" type="submit">登入</button>
        <a class="btn btn-primary btn-block" href="/auth/facebook">Facebook 登入</a>
        <p class="lead mt-4">
          還未註冊? <a href="/users/register">註冊</a>
        </p>
      </form>
    </div>
  </div>
</div>