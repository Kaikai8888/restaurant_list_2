<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="wrapper d-flex align-items-center justify-content-between">
      <div class="search-bar-inner">
        <form action="/search" method="GET">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="搜尋餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-info" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>

      <div id="sort-dropdown">
        <div class="dropdown show">
          <a class="btn btn-info dropdown-toggle" href="#" role="button" id="sort-menu" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            {{#if sortConditionString}} {{ sortConditionString }} {{else}} 排序 {{/if}}
          </a>

          <div class="dropdown-menu" aria-labelledby="sort-menu">
            <a class="dropdown-item" href="/?sortProperty=name&sortOrder=asc">店名: A - Z</a>
            <a class="dropdown-item" href="/?sortProperty=name&sortOrder=desc">店名: Z - A</a>
            <a class="dropdown-item" href="/?sortProperty=category">類別</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 data-display-area">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-wrapper">
        {{#each restaurants}}
        <div class="card mr-1 mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">

            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </a>
          <div class="card-foot px-3 pb-3 pt-0">
            <div class="d-flex justify-content-end">
              <a href="/restaurants/{{ this._id }}/edit" class="btn btn-info mr-2">編輯</a>

              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"
                onsubmit="return confirm('確定要刪除「{{ this.name }}」嗎?')">
                <button class="btn btn-danger delete-btn">刪除</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>